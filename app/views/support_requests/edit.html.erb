<div class="row">

    <p>
      <%= @support_request.user.company_name %> 様　対象製品：<%= @support_request.product_name %>
    </p>
    
    <p>
    <%= form_with(model: @support_request) do |f| %>
      ステータス：
      <%= f.radio_button :status, :新規 %>
      <%= f.label :status, "新規", {value: :新規, style: "display: inline-block;"} %>
      
      <%= f.radio_button :status, :対応可能 %>
      <%= f.label :status, "対応可能", {value: :対応可能, style: "display: inline-block;"} %>
      
      <%= f.radio_button :status, :アサイン中 %>
      <%= f.label :status, "アサイン中", {value: :アサイン中, style: "display: inline-block;"} %>
      
      <%= f.radio_button :status, :対応中 %>
      <%= f.label :status, "対応中", {value: :対応中, style: "display: inline-block;"} %>
      
      <%= f.radio_button :status, :完了 %>
      <%= f.label :status, "完了", {value: :完了, style: "display: inline-block;"} %>
    </p>
    
    <p>
      <%= f.label :contents, 'サポートリクエスト内容' %>
      <%= f.text_area :contents, class: 'form-control', rows: 10 %>
    
      <%= f.submit 'ステータス更新', class: 'btn btn-outline-primary btn-sm w-100' %>
    </p>
    <% end %>
  <p><%= link_to '一覧に戻る', support_requests_path %></p>
</div>